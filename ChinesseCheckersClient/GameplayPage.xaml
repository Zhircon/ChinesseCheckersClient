<Page x:Class="ChinesseCheckersClient.GameplayPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ChinesseCheckersClient"
      mc:Ignorable="d" 
      d:DesignHeight="680" d:DesignWidth="1280"
      Title="GameplayPage"
      FontSize="16">

    <Viewbox Stretch="Fill" StretchDirection="Both">
        <Canvas Height="680" Width="1280">
            <Image Source="assets/Images/GameBoard.png" Height="681" Width="681"></Image>
            <ListBox x:Name="listBoxMessage" Height="537" Width="300" Canvas.Left="970" Canvas.Top="10" />
            <TextBox x:Name="tbMessage"  Height="25" Canvas.Left="970" TextWrapping="Wrap" Canvas.Top="552" Width="246"/>
            <Button x:Name="btSendMessage" Click="btSendMessage_Click" Content=">" Canvas.Left="1221" Canvas.Top="552" Width="49"/>
        </Canvas>
    </Viewbox>
</Page>
