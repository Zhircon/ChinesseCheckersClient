            <Rectangle x:Name="rCheckValidatePassword" Fill="#FFF4F4F5" Height="44" Canvas.Left="1074" Canvas.Top="478" Width="44" RadiusY="8.5" RadiusX="8.5"/>
            <Rectangle Height="44" Canvas.Left="1150" Canvas.Top="584" Width="42" RadiusY="8.5" RadiusX="8.5" Fill="Black"/>
            <Label Content="Error de inicio de sesion" Canvas.Left="106" Canvas.Top="550"/>

